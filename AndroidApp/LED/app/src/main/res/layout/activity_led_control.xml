<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.ledControl"
    android:clickable="true"
    android:background="#000000">

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="DOOR OPEN"
        android:id="@+id/button2"
        android:layout_toLeftOf="@+id/lumn"
        android:layout_toStartOf="@+id/lumn"
        android:layout_x="13dp"
        android:layout_y="136dp"
        android:background="#c6a3dcff"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="DOOR CLOSE"
        android:id="@+id/button3"
        android:layout_x="190dp"
        android:layout_y="136dp"
        android:textColor="#FFFFFF"
        android:background="#c6a3dcff"
        android:textSize="18dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="13dp"
        android:layout_y="434dp"
        android:background="#000000"
        android:textColor="#a3dcff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lumn"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="LIGHT ON"
        android:id="@+id/button5"
        android:layout_centerVertical="true"
        android:layout_x="13dp"
        android:layout_y="232dp"
        android:background="#c6a3dcff"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="LIGHT OFF"
        android:id="@+id/button6"
        android:layout_centerHorizontal="true"
        android:layout_x="190dp"
        android:layout_y="232dp"
        android:textColor="#FFFFFF"
        android:background="#c6a3dcff"
        android:textSize="18dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="SHOWER ON"
        android:id="@+id/button7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="13dp"
        android:layout_y="332dp"
        android:background="#c6a3dcff"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <Button
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:text="SHOWER OFF"
        android:id="@+id/button8"
        android:layout_x="190dp"
        android:layout_y="332dp"
        android:background="#c6a3dcff"
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/button9"
        android:layout_x="285dp"
        android:layout_y="431dp"
        android:textColor="#a3dcff"
        android:background="#000000" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_x="0dp"
        android:layout_y="11dp"
        android:src="@drawable/logo" />

</AbsoluteLayout>
