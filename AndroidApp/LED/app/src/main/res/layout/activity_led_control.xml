<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.ledControl"
    android:clickable="true"
    android:background="#0F3057">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_x="56dp"
        android:layout_y="510dp"
        android:background="#0F3057"
        android:textColor="#CDCBA6" />


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WEB"
        android:id="@+id/button9"
        android:layout_x="259dp"
        android:layout_y="510dp"
        android:textColor="#CDCBA6"
        android:background="#0F3057" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_x="0dp"
        android:layout_y="11dp" />
        //android:src="@drawable/nestlogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Speed: "
        android:id="@+id/speedTextView"
        android:layout_x="39dp"
        android:layout_y="54dp"
        android:background="#fbde03" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Distance Traveled: "
        android:id="@+id/distanceTraveledTextView"
        android:layout_x="38dp"
        android:layout_y="99dp"
        android:background="#f7db06" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/clearButton"
        android:layout_x="227dp"
        android:layout_y="214dp"
        android:background="#008891"
        android:onClick="clearButtonOnClick"
        android:nestedScrollingEnabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/toggleButton"
        android:layout_x="46dp"
        android:layout_y="216dp"
        android:background="#008891"
        android:onClick="toggleButtonOnClick" />

</AbsoluteLayout>
